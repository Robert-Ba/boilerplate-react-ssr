{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "max-len": ["error", { "code": 100, "comments": 400 }],
      "linebreak-style": [
        "error", "windows"
      ],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
